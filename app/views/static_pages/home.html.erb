<% if signed_in? %>
    <div class="row-fluid">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
    </div>
<% else %>
    <div class="center hero-unit">
      <%= link_to image_tag("loudror.png", alt:"Loud RoR") %>
      <h1>Sorry! You must have heard us.</h1>
      <h2>
        We offer test driven development of Ruby on Rails web and mobile applications.
      </h2>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    </div>
    <%= link_to image_tag("rails.png", alt:"Rails"), 'http://rubyonrails.org/' %>
<% end %>